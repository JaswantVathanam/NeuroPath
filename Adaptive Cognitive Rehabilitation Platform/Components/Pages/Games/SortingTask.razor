    private int selectedItemId = 0;
    private string selectedCategory = "";
    private int elapsedSeconds = 0;
    private DateTime gameStartTime;
    private GameSessionResult? _gameSessionResult;
    private GameAiAnalysisService.AiAnalysisResponse? _aiResponse;

    // Current user context (TODO: Get from authentication)
    private int currentUserId = 1;
    private int currentProfileId = 1;

    private List<SortItem> itemList = new();
    private List<Category> categories = new();

    private class SortItem {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Category { get; set; } = "";
        public bool IsSorted { get; set; }
    }

    private class Category {
        public string Name { get; set; } = "";
    }

    private void HandleSelectLevel(int level) {
        selectedLevel = level;
        Logger?.LogInformation($"Level selected: {level}");
        StateHasChanged();
    }

    private void HandleStartGame() {
        if (selectedLevel == 0) {
            Logger?.LogWarning("Attempted to start game without selecting a level");
            return;
        }
        gameStarted = true;
        gameEnded = false;
        sortedCount = 0;
        selectedItemId = 0;
        selectedCategory = "";
        gameStartTime = DateTime.Now;
        Logger?.LogInformation($"Game started with level {selectedLevel}");
        _ = InitializeGameWithAI();  // Load game content asynchronously from AI
        StateHasChanged();
    }

    private async Task InitializeGameWithAI()
    {
        try
        {
            // Try to get dynamic content from AI
            var dynamicContent = await DynamicContentService.GenerateDynamicContentAsync(selectedLevel);
            
            if (dynamicContent != null && dynamicContent.Categories.Count > 0 && dynamicContent.Items.Count > 0)
            {
                itemList.Clear();
                categories.Clear();

                // Add categories
                foreach (var category in dynamicContent.Categories)
                {
                    categories.Add(new Category { Name = category.Name });
                }

                // Add items with shuffled IDs
                int id = 1;
                foreach (var item in dynamicContent.Items)
                {
                    itemList.Add(new SortItem 
                    { 
                        Id = id, 
                        Name = item.Name, 
                        Category = item.Category 
                    });
                    id++;
                }

                Logger?.LogInformation($"? Loaded dynamic content: {dynamicContent.Categories.Count} categories, {dynamicContent.Items.Count} items");
            }
            else
            {
                Logger?.LogWarning("Failed to load dynamic content, using default");
                InitializeGameWithDefault();
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError($"Error loading dynamic content: {ex.Message}, using default");
            InitializeGameWithDefault();
        }

        totalItems = itemList.Count;
        Shuffle();
        StateHasChanged();
    }

