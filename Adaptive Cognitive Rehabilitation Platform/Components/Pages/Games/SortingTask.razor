        InitializeGameWithDefault();
    }

    private void Shuffle() {
        Random random = new();
        for (int i = itemList.Count - 1; i > 0; i--) {
            int randomIndex = random.Next(i + 1);
            var temp = itemList[i];
            itemList[i] = itemList[randomIndex];
            itemList[randomIndex] = temp;
        }
        Logger?.LogInformation("?? Items shuffled randomly!");
    }

    private void HandleAiShuffle() {
        Logger?.LogInformation("?? AI Shuffle requested - randomizing item order...");
        Shuffle();
        selectedItemId = 0;
        selectedCategory = "";
        StateHasChanged();
    }

    private void HandleSelectItem(int itemId) {
        // Toggle selection - if clicking same item again, deselect it
        if (selectedItemId == itemId) {
            selectedItemId = 0;
        } else {
            selectedItemId = itemId;
        }
        selectedCategory = "";
        Logger?.LogInformation($"Item selected: {itemId}");
        StateHasChanged();
    }

    private void HandleSelectCategory(string categoryName) {
        selectedCategory = categoryName;
        Logger?.LogInformation($"Category selected: {categoryName}");
        StateHasChanged();
    }

    private async Task HandlePlaceItem() {
        var item = itemList.FirstOrDefault(i => i.Id == selectedItemId);
        if (item != null && item.Category == selectedCategory) {
            item.IsSorted = true;
            sortedCount++;
            selectedItemId = 0;
            selectedCategory = "";

            if (sortedCount == totalItems) {
                elapsedSeconds = (int)(DateTime.Now - gameStartTime).TotalSeconds;
                gameEnded = true;
                
                // Create game session result for AI analysis
                var accuracy = (sortedCount * 100) / totalItems;
                _gameSessionResult = new GameSessionResult
                {
                    GameType = "Sorting Task",
                    DifficultyLevel = selectedLevel,
                    TotalMoves = totalItems,
                    TotalMatches = totalItems,
                    CorrectMatches = sortedCount,
                    ErrorCount = totalItems - sortedCount,
                    ElapsedSeconds = elapsedSeconds,
                    StartTime = gameStartTime,
                    EndTime = DateTime.Now,
                    AccuracyPercentage = accuracy,
                    SpeedScore = 100 - Math.Min(elapsedSeconds / 3, 50),
                    ConsistencyScore = accuracy > 80 ? 90 : accuracy > 60 ? 75 : 60,
                    OverallScore = (accuracy * 0.6) + ((100 - Math.Min(elapsedSeconds / 3, 50)) * 0.4)
                };
                
                await SaveGameSessionAsync();
                AnalyzeGameWithAI();
            }
        }
        StateHasChanged();
    }

    private void HandleCancelSelection() {
        selectedItemId = 0;
        selectedCategory = "";
        StateHasChanged();
    }

    private async void AnalyzeGameWithAI()
    {
        aiAnalyzing = true;
        StateHasChanged();

        try
        {
            _aiResponse = await AiService.AnalyzeGamePerformanceAsync(
                _gameSessionResult ?? new GameSessionResult(),
                "Player",
                0
            );

            Logger?.LogInformation($"AI Analysis complete: Score {_aiResponse?.PerformanceScore}");
            
            // ?? Autosave game result to database
            await AutosaveGameResultAsync(_aiResponse);
        }
        catch (Exception ex)
        {
            Logger?.LogError($"AI Analysis failed: {ex.Message}");
            _aiResponse = new GameAiAnalysisService.AiAnalysisResponse
            {
                Encouragement = "Great job sorting all items!",
                FunMessage = "You organized everything perfectly!",
                EffortNote = "Keep practicing to sort even faster!",
                PerformanceScore = _gameSessionResult?.OverallScore ?? 75,
                NextDifficultyLevel = Math.Min(3, selectedLevel + 1),
                Confidence = 0.7
            };
            
            // Still autosave even with fallback response
            await AutosaveGameResultAsync(_aiResponse);
        }

        aiAnalyzing = false;
        StateHasChanged();
    }

    private async Task AutosaveGameResultAsync(GameAiAnalysisService.AiAnalysisResponse? aiResponse)
    {
        try
        {
            // Get user info from localStorage
            var userId = await GetCurrentUserIdAsync();
            var username = await GetCurrentUsernameAsync();

            var autosaveRequest = new
            {
                UserId = userId,
                Username = username,
                GameType = "SortingTask",
                GameMode = "Practice",
                Difficulty = selectedLevel,
                DifficultyName = GetDifficultyName(selectedLevel),
                Score = (int)(aiResponse?.PerformanceScore ?? 0),
                Accuracy = (decimal)(_gameSessionResult?.AccuracyPercentage ?? 0),
                TotalMoves = totalItems,
                CorrectMoves = sortedCount,
                ErrorCount = totalItems - sortedCount,
                TimeTakenSeconds = elapsedSeconds,
                ItemsSorted = sortedCount,
                TotalItems = totalItems,
                AiEncouragement = aiResponse?.Encouragement ?? "Great sorting!",
                AiFunMessage = aiResponse?.FunMessage ?? "Organized brilliantly!",
                AiEffortNote = aiResponse?.EffortNote ?? "Keep it up!",
                RecommendedDifficulty = GetDifficultyName((int)(aiResponse?.NextDifficultyLevel ?? selectedLevel)),
                AiConfidence = aiResponse?.Confidence ?? 0.7,
                StartTime = gameStartTime,
                EndTime = DateTime.UtcNow,
                Notes = $"Sorting Task - Level {selectedLevel} - {sortedCount}/{totalItems} sorted in {elapsedSeconds}s"
            };

            var apiUrl = $"{NavigationManager.BaseUri}api/json-stats/save";
            var response = await Http.PostAsJsonAsync(apiUrl, autosaveRequest);
            
            if (response.IsSuccessStatusCode)
            {
                Logger?.LogInformation("? Game result autosaved to JSON (SortingTask)");
            }
            else
            {
                Logger?.LogWarning($"?? JSON autosave returned status: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError($"? JSON autosave failed: {ex.Message}");
        }
    }

    private string GetDifficultyName(int level) => level switch
    {
        1 => "Easy",
        2 => "Medium",
        3 => "Hard",
        _ => "Unknown"
    };

    private async Task<int> GetCurrentUserIdAsync()
    {
        try
        {
            var userIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userId");
            return int.TryParse(userIdStr, out var id) ? id : 1;
        }
        catch { return 1; }
    }

    private async Task<string> GetCurrentUsernameAsync()
    {
        try
        {
            var username = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "username");
            return !string.IsNullOrEmpty(username) ? username : "Guest";
        }
        catch { return "Guest"; }
    }

    private async Task SaveGameSessionAsync()
    {
        try
        {
            var session = new GameSession
            {
                UserId = currentUserId,
                ProfileId = currentProfileId,
                GameType = "SortingTask",
                Difficulty = selectedLevel,
                Status = "Completed",
                TimeStarted = gameStartTime,
                TimeCompleted = DateTime.UtcNow,
                TotalSeconds = elapsedSeconds,
                TotalMoves = totalItems,
                CorrectMatches = sortedCount,
                Accuracy = (decimal)(_gameSessionResult?.AccuracyPercentage ?? 0),
                PerformanceScore = (int)(_gameSessionResult?.OverallScore ?? 0),
                EfficiencyScore = (decimal)(100 - Math.Min(elapsedSeconds / 3.0, 50)),
                CreatedAt = DateTime.UtcNow,
                UpdatedAt = DateTime.UtcNow,
                Notes = $"Sorting Task - Level {selectedLevel} - {sortedCount}/{totalItems} sorted in {elapsedSeconds}s"
            };

            // Save via local repository
            await SessionRepository.CreateSessionAsync(session);
            
            // Also save via HTTP API endpoint for consistency
            try
            {
                var request = new
                {
                    UserId = currentUserId,
                    ProfileId = currentProfileId,
                    GameType = "SortingTask",
                    Difficulty = selectedLevel,
                    TotalSeconds = elapsedSeconds,
                    TotalMoves = totalItems,
                    CorrectMatches = sortedCount,
                    PerformanceScore = (int)(_gameSessionResult?.OverallScore ?? 0)
                };
                
                await Http.PostAsJsonAsync("/api/game/save-session", request);
                Logger?.LogInformation($"Game session saved via API: SortingTask Level {selectedLevel}");
            }
            catch (Exception apiEx)
            {
                Logger?.LogWarning($"Failed to save via API (local save succeeded): {apiEx.Message}");
            }
            
            Logger?.LogInformation($"Game session saved: SortingTask Level {selectedLevel} - {sortedCount}/{totalItems} items");
        }
        catch (Exception ex)
        {
            Logger?.LogError($"Failed to save game session: {ex.Message}");
        }
    }

    private void HandleResetGame() {
        gameStarted = false;
        gameEnded = false;
        selectedLevel = 0;
        sortedCount = 0;
        selectedItemId = 0;
        selectedCategory = "";
        itemList.Clear();
        categories.Clear();
        StateHasChanged();
    }
