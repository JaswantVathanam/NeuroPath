@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Sorting Task</PageTitle>

<div class="game-container">
    <h1><i class="bi bi-collection"></i> Sorting Task</h1>
    
    @if (!gameStarted && !gameEnded) {
        <div class="difficulty-box">
            <h2>Select Difficulty Level</h2>
            <div class="difficulty-buttons">
                <button class="diff-btn @(selectedLevel == 1 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(1)">
                    <i class="bi bi-lightning-fill"></i>
                    <span>Easy (6 items)</span>
                </button>
                <button class="diff-btn @(selectedLevel == 2 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(2)">
                    <i class="bi bi-star-fill"></i>
                    <span>Medium (12 items)</span>
                </button>
                <button class="diff-btn @(selectedLevel == 3 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(3)">
                    <i class="bi bi-fire"></i>
                    <span>Hard (18 items)</span>
                </button>
            </div>
            <button class="start-btn" @onclick="HandleStartGame" disabled="@(selectedLevel == 0)">
                <i class="bi bi-play-fill"></i> START GAME
            </button>
        </div>
    }
    
    @if (gameStarted && !gameEnded) {
        <div class="game-board">
            <div class="progress-info">
                <span>Sorted: <strong>@sortedCount</strong> / <strong>@totalItems</strong></span>
            </div>
            
            <div class="items-pool">
                <h3>Items to Sort:</h3>
                <div style="display: flex; gap: 10px; margin-bottom: 15px;">
                    <button style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 8px 16px; border-radius: 6px; cursor: pointer; font-weight: bold; font-size: 0.9em;" @onclick="HandleAiShuffle">
                        <i class="bi bi-shuffle"></i> Shuffle Items
                    </button>
                </div>
                <div class="items-list">
                    @foreach (var item in itemList.Where(i => !i.IsSorted)) {
                        <button class="item-btn @(selectedItemId == item.Id ? "selected" : "")" @onclick="@((MouseEventArgs e) => HandleSelectItem(item.Id))">
                            <span>@item.Name</span>
                            @if (selectedItemId == item.Id) {
                                <i class="bi bi-check-circle-fill"></i>
                            }
                        </button>
                    }
                </div>
            </div>
            
            @if (selectedItemId > 0) {
                <div class="quick-actions">
                    <p style="text-align: center; color: #667eea; font-weight: bold;">? Item selected! Click a category to place it.</p>
                </div>
            }
            
            <div class="categories-section">
                <h3>Categories:</h3>
                <div class="categories-grid">
                    @foreach (var category in categories) {
                        <div class="category-box">
                            <h4>@category.Name</h4>
                            <div class="category-items">
                                @foreach (var item in itemList.Where(i => i.Category == category.Name && i.IsSorted)) {
                                    <div class="sorted-item">
                                        <span>@item.Name</span>
                                        <i class="bi bi-check-circle-fill"></i>
                                    </div>
                                }
                                @if (selectedCategory == category.Name && selectedItemId > 0) {
                                    <button class="place-btn" @onclick="@((MouseEventArgs e) => HandlePlaceItem())">
                                        <i class="bi bi-check"></i> Place Here
                                    </button>
                                    <button class="cancel-btn" @onclick="@((MouseEventArgs e) => HandleCancelSelection())">
                                        <i class="bi bi-x"></i> Cancel
                                    </button>
                                }
                            </div>
                            @if (selectedItemId == 0 || selectedCategory != category.Name) {
                                <button class="category-select-btn" @onclick="@((MouseEventArgs e) => HandleSelectCategory(category.Name))">
                                    <i class="bi bi-arrow-down-circle"></i> Place Item
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
    @if (gameEnded) {
        <div class="results-box">
            <h2><i class="bi bi-trophy-fill"></i> Game Complete!</h2>
            
            @if (aiAnalyzing) {
                <div class="ai-analyzing">
                    <div class="spinner"></div>
                    <p> AI is analyzing your performance...</p>
                </div>
            }
            else if (_aiResponse != null) {
                <div class="performance-score-badge">
                    @((int)_aiResponse.PerformanceScore)
                </div>
                
                <div class="stats">
                    <p>Total Items: <strong>@totalItems</strong></p>
                    <p>Correctly Sorted: <strong>@sortedCount</strong></p>
                    <p>Accuracy: <strong>@((sortedCount * 100) / totalItems)%</strong></p>
                    <p>Time Taken: <strong>@elapsedSeconds</strong>s</p>
                </div>

                <div class="ai-feedback">
                    <div class="feedback-section">
                        <h3><i class="bi bi-star-fill"></i> Encouragement</h3>
                        <p>@_aiResponse.Encouragement</p>
                    </div>
                    <div class="feedback-section">
                        <h3><i class="bi bi-heart-fill"></i> Effort Note</h3>
                        <p>@_aiResponse.EffortNote</p>
                    </div>
                    <div class="feedback-section">
                        <h3><i class="bi bi-emoji-smile"></i> Fun Message</h3>
                        <p>@_aiResponse.FunMessage</p>
                    </div>
                </div>
            }
            else {
                <div class="stats">
                    <p>Total Items: <strong>@totalItems</strong></p>
                    <p>Correctly Sorted: <strong>@sortedCount</strong></p>
                    <p>Accuracy: <strong>@((sortedCount * 100) / totalItems)%</strong></p>
                    <p>Time Taken: <strong>@elapsedSeconds</strong>s</p>
                </div>
            }
            
            <button class="reset-btn" @onclick="@((MouseEventArgs e) => HandleResetGame())">
                <i class="bi bi-arrow-clockwise"></i> Try Again
            </button>
        </div>
    }
</div>

