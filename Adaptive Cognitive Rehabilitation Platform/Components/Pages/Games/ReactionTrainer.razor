@page "/games/reaction-trainer"
@using AdaptiveCognitiveRehabilitationPlatform.Services
@using NeuroPath.Models
@using AdaptiveCognitiveRehabilitationPlatform.Services.GameAnalytics
@inject ILogger<ReactionTrainer> Logger
@inject GameStatisticsService StatsService
@inject GameAiAnalysisService AiService
@inject IGameSessionRepository SessionRepository
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Reaction Trainer</PageTitle>

<div class="game-container">
    <h1><i class="bi bi-lightning-charge-fill"></i> Reaction Trainer</h1>
    
    @if (!gameStarted && !gameEnded) {
        <div class="difficulty-box">
            <h2>Select Difficulty Level</h2>
            <div class="difficulty-buttons">
                <button class="diff-btn @(selectedLevel == 1 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(1)">
                    <i class="bi bi-lightning-fill"></i>
                    <span>Easy (5 rounds)</span>
                </button>
                <button class="diff-btn @(selectedLevel == 2 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(2)">
                    <i class="bi bi-star-fill"></i>
                    <span>Medium (10 rounds)</span>
                </button>
                <button class="diff-btn @(selectedLevel == 3 ? "active" : "")" 
                        @onclick="() => HandleSelectLevel(3)">
                    <i class="bi bi-fire"></i>
                    <span>Hard (15 rounds)</span>
                </button>
            </div>
            <button class="start-btn" @onclick="HandleStartGame" disabled="@(selectedLevel == 0)">
                <i class="bi bi-play-fill"></i> START GAME
            </button>
        </div>
    }
    
    @if (gameStarted && !gameEnded && !roundStarted) {
        <div class="waiting-box">
            <h2>Get Ready!</h2>
            <p>Round @(currentRound + 1) of @totalRounds</p>
            <button class="start-round-btn" @onclick="@((MouseEventArgs e) => HandleInitiateRound())">
                <i class="bi bi-hand-thumbs-up-fill"></i> START ROUND
            </button>
        </div>
    }
    
    @if (gameStarted && !gameEnded && roundStarted && !signalShown) {
        <div class="countdown-box">
            <div class="countdown-display">
                @if (countdown > 0) {
                    <div class="countdown-number">@countdown</div>
                }
                else {
                    <div class="waiting-signal">Wait...</div>
                }
            </div>
        </div>
    }
    
    @if (gameStarted && !gameEnded && roundStarted && signalShown) {
        <div class="signal-box">
            <div class="signal-circle active"></div>
            <h2>TAP AS FAST AS YOU CAN!</h2>
            <button class="react-btn" @onclick="@((MouseEventArgs e) => HandleRecordReaction())">
                <i class="bi bi-finger-index"></i> CLICK HERE!
            </button>
        </div>
    }
    
    @if (gameEnded) {
        <div class="results-box">
            <h2><i class="bi bi-trophy-fill"></i> Game Complete!</h2>
            
            @if (aiAnalyzing) {
                <div class="ai-analyzing">
                    <div class="spinner"></div>
                    <p>AI is analyzing your performance...</p>
                </div>
            }
            else if (_aiResponse != null) {
                <div class="performance-score-badge">
                    @((int)_aiResponse.PerformanceScore)
                </div>
                
                <div class="stats">
                    <p>Total Rounds: <strong>@totalRounds</strong></p>
                    <p>Average Reaction Time: <strong>@averageReactionTime</strong>ms</p>
                    <p>Best Time: <strong>@bestReactionTime</strong>ms</p>
                    <p>Worst Time: <strong>@worstReactionTime</strong>ms</p>
                </div>

                <div class="ai-feedback">
                    <div class="feedback-section">
                        <h3><i class="bi bi-star-fill"></i> Encouragement</h3>
                        <p>@_aiResponse.Encouragement</p>
                    </div>
                    <div class="feedback-section">
                        <h3><i class="bi bi-heart-fill"></i> Effort Note</h3>
                        <p>@_aiResponse.EffortNote</p>
                    </div>
                    <div class="feedback-section">
                        <h3><i class="bi bi-emoji-smile"></i> Fun Message</h3>
                        <p>@_aiResponse.FunMessage</p>
                    </div>
                    @if (_aiResponse.NextDifficultyLevel != selectedLevel) {
                        <div class="feedback-section next-level">
                            <h3><i class="bi bi-arrow-up-circle-fill"></i> Level Recommendation</h3>
                            <p>Level @_aiResponse.NextDifficultyLevel (@(_aiResponse.NextDifficultyLevel > selectedLevel ? "Harder" : "Easier")) - Confidence: @($"{_aiResponse.Confidence:P0}")</p>
                        </div>
                    }
                </div>
            }
            else {
                <div class="stats">
                    <p>Total Rounds: <strong>@totalRounds</strong></p>
                    <p>Average Reaction Time: <strong>@averageReactionTime</strong>ms</p>
                    <p>Best Time: <strong>@bestReactionTime</strong>ms</p>
                    <p>Worst Time: <strong>@worstReactionTime</strong>ms</p>
                    <div class="reactions-list">
                        <h3>Your Reaction Times:</h3>
                        @foreach (var time in reactionTimes) {
                            <span class="reaction-badge">@time ms</span>
                        }
                    </div>
                </div>
            }
            
            <div class="action-buttons">
                <button class="reset-btn" @onclick="@((MouseEventArgs e) => HandleResetGame())">
                    <i class="bi bi-arrow-clockwise"></i> Try Again
                </button>
                <button class="home-btn" @onclick="@((MouseEventArgs e) => NavigateHome())">
                    <i class="bi bi-house-door"></i> Back to Games
                </button>
            </div>
        </div>
    }
</div>

