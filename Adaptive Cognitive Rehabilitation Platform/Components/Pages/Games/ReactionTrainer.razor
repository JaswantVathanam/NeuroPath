@code {
    private int selectedLevel = 0;
    private bool gameStarted = false;
    private bool gameEnded = false;
    private bool roundStarted = false;
    private bool signalShown = false;
    private bool aiAnalyzing = false;
    private int currentRound = 0;
    private int totalRounds = 0;
    private int countdown = 0;
    private DateTime? signalStartTime;
    private List<int> reactionTimes = new();
    private int averageReactionTime = 0;
    private int bestReactionTime = 0;
    private int worstReactionTime = 0;
    private GameSessionResult? _gameSessionResult;
    private GameAiAnalysisService.AiAnalysisResponse? _aiResponse;

    // Current user context (TODO: Get from authentication)
    private int currentUserId = 1;
    private int currentProfileId = 1;

    private void HandleSelectLevel(int level) {
        selectedLevel = level;
        Logger?.LogInformation($"Level selected: {level}");
        StateHasChanged();
    }

    private void HandleStartGame() {
        if (selectedLevel == 0) {
            Logger?.LogWarning("Attempted to start game without selecting a level");
            return;
        }
        gameStarted = true;
        gameEnded = false;
        roundStarted = false;
        signalShown = false;
        currentRound = 0;
        reactionTimes.Clear();
        totalRounds = selectedLevel == 1 ? 5 : (selectedLevel == 2 ? 10 : 15);
        Logger?.LogInformation($"Game started - Total rounds: {totalRounds}");
        StateHasChanged();
    }

    private async Task HandleInitiateRound() {
        roundStarted = true;
        signalShown = false;
        countdown = 3;
        StateHasChanged();

        for (int i = 3; i > 0; i--) {
            await Task.Delay(1000);
            countdown = i - 1;
            StateHasChanged();
        }

        Random random = new();
        int delay = random.Next(1000, 3000);
        await Task.Delay(delay);

        signalShown = true;
        signalStartTime = DateTime.Now;
        StateHasChanged();
    }

    private async Task HandleRecordReaction() {
        if (!signalShown || signalStartTime == null) return;

        int reactionTime = (int)(DateTime.Now - signalStartTime.Value).TotalMilliseconds;
        reactionTimes.Add(reactionTime);
        currentRound++;
        roundStarted = false;
        signalShown = false;

        if (currentRound >= totalRounds) {
            await HandleEndGame();
        }

        StateHasChanged();
    }

    private async Task HandleEndGame() {
        gameEnded = true;
        gameStarted = false;
        roundStarted = false;
        signalShown = false;

        if (reactionTimes.Count > 0) {
            averageReactionTime = (int)reactionTimes.Average();
            bestReactionTime = reactionTimes.Min();
            worstReactionTime = reactionTimes.Max();
        }

        // Create game session result for AI analysis
        var accuracy = reactionTimes.Count > 0 ? (averageReactionTime <= 300 ? 95 : 
                                                   averageReactionTime <= 400 ? 85 : 
                                                   averageReactionTime <= 500 ? 75 : 60) : 50;
        
        _gameSessionResult = new GameSessionResult
        {
            GameType = "Reaction Trainer",
            DifficultyLevel = selectedLevel,
            TotalMoves = totalRounds,
            TotalMatches = totalRounds,
            CorrectMatches = totalRounds,
            ErrorCount = 0,
            ElapsedSeconds = averageReactionTime / 1000,
            StartTime = DateTime.Now.AddSeconds(-averageReactionTime / 1000),
            EndTime = DateTime.Now,
            AccuracyPercentage = accuracy,
            SpeedScore = 100 - Math.Min((averageReactionTime - 250) / 5, 50),
            ConsistencyScore = 100 - ((worstReactionTime - bestReactionTime) / 10),
            OverallScore = (accuracy * 0.5) + ((100 - Math.Min((averageReactionTime - 250) / 5, 50)) * 0.5)
        };

        await SaveGameSessionAsync();
        AnalyzeGameWithAI();
        StateHasChanged();
    }

    private async Task SaveGameSessionAsync()
    {
        try
        {
            var session = new GameSession
            {
                UserId = currentUserId,
                ProfileId = currentProfileId,
                GameType = "ReactionTrainer",
                Difficulty = selectedLevel,
                Status = "Completed",
                TimeStarted = DateTime.UtcNow.AddSeconds(-totalRounds * 5), // Estimate start time
                TimeCompleted = DateTime.UtcNow,
                TotalSeconds = totalRounds * 5,
                TotalMoves = totalRounds,
                CorrectMatches = totalRounds,
                Accuracy = (decimal)(_gameSessionResult?.AccuracyPercentage ?? 0),
                PerformanceScore = (int)(_gameSessionResult?.OverallScore ?? 0),
                EfficiencyScore = (decimal)(100 - Math.Min((averageReactionTime - 250) / 5.0, 50)),
                CreatedAt = DateTime.UtcNow,
                UpdatedAt = DateTime.UtcNow,
                Notes = $"Reaction Trainer - Level {selectedLevel} - Avg reaction: {averageReactionTime}ms"
            };

            // Save via local repository
            await SessionRepository.CreateSessionAsync(session);
            
            // Also save via HTTP API endpoint for consistency
            try
            {
                var request = new
                {
                    UserId = currentUserId,
                    ProfileId = currentProfileId,
                    GameType = "ReactionTrainer",
                    Difficulty = selectedLevel,
                    TotalSeconds = totalRounds * 5,
                    TotalMoves = totalRounds,
                    CorrectMatches = totalRounds,
                    PerformanceScore = (int)(_gameSessionResult?.OverallScore ?? 0)
                };
                
                await Http.PostAsJsonAsync("/api/game/save-session", request);
                Logger?.LogInformation($"Game session saved via API: ReactionTrainer Level {selectedLevel}");
            }
            catch (Exception apiEx)
            {
                Logger?.LogWarning($"Failed to save via API (local save succeeded): {apiEx.Message}");
            }
            
            Logger?.LogInformation($"Game session saved: ReactionTrainer Level {selectedLevel} - Avg: {averageReactionTime}ms");
        }
        catch (Exception ex)
        {
            Logger?.LogError($"Failed to save game session: {ex.Message}");
        }
    }

    private async void AnalyzeGameWithAI()
    {
        aiAnalyzing = true;
        StateHasChanged();

        try
        {
            _aiResponse = await AiService.AnalyzeGamePerformanceAsync(
                _gameSessionResult ?? new GameSessionResult(),
                "Player",
                0
            );

            Logger?.LogInformation($"AI Analysis complete: Score {_aiResponse?.PerformanceScore}");
            
            // ?? Autosave game result to database
            await AutosaveGameResultAsync(_aiResponse);
        }
        catch (Exception ex)
        {
            Logger?.LogError($"AI Analysis failed: {ex.Message}");
            _aiResponse = new GameAiAnalysisService.AiAnalysisResponse
            {
                Encouragement = "Great job! You completed all rounds!",
                FunMessage = "Your reactions are getting faster!",
                EffortNote = "Keep practicing to improve!",
                PerformanceScore = _gameSessionResult?.OverallScore ?? 70,
                NextDifficultyLevel = Math.Min(3, selectedLevel + 1),
                Confidence = 0.7
            };
            
            // Still autosave even with fallback response
            await AutosaveGameResultAsync(_aiResponse);
        }

        aiAnalyzing = false;
        StateHasChanged();
    }

    private async Task AutosaveGameResultAsync(GameAiAnalysisService.AiAnalysisResponse? aiResponse)
    {
        try
        {
            // Get user info from localStorage
            var userId = await GetCurrentUserIdAsync();
            var username = await GetCurrentUsernameAsync();

            var autosaveRequest = new
            {
                UserId = userId,
                Username = username,
                GameType = "ReactionTrainer",
                GameMode = "Practice",
                Difficulty = selectedLevel,
                DifficultyName = GetDifficultyName(selectedLevel),
                Score = (int)(aiResponse?.PerformanceScore ?? 0),
                Accuracy = (decimal)(_gameSessionResult?.AccuracyPercentage ?? 0),
                TotalMoves = totalRounds,
                CorrectMoves = totalRounds,
                ErrorCount = 0,
                TimeTakenSeconds = totalRounds * 5,
                AverageReactionTimeMs = (double)averageReactionTime,
                AiEncouragement = aiResponse?.Encouragement ?? "Great reflexes!",
                AiFunMessage = aiResponse?.FunMessage ?? "Lightning fast!",
                AiEffortNote = aiResponse?.EffortNote ?? "Keep training!",
                RecommendedDifficulty = GetDifficultyName((int)(aiResponse?.NextDifficultyLevel ?? selectedLevel)),
                AiConfidence = aiResponse?.Confidence ?? 0.7,
                StartTime = DateTime.UtcNow.AddSeconds(-totalRounds * 5),
                EndTime = DateTime.UtcNow,
                Notes = $"Reaction Trainer - Level {selectedLevel} - Avg: {averageReactionTime}ms, Best: {bestReactionTime}ms, Worst: {worstReactionTime}ms"
            };

            var apiUrl = $"{NavigationManager.BaseUri}api/json-stats/save";
            var response = await Http.PostAsJsonAsync(apiUrl, autosaveRequest);
            
            if (response.IsSuccessStatusCode)
            {
                Logger?.LogInformation("? Game result autosaved to JSON (ReactionTrainer)");
            }
            else
            {
                Logger?.LogWarning($"?? JSON autosave returned status: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError($"? JSON autosave failed: {ex.Message}");
        }
    }

    private string GetDifficultyName(int level) => level switch
    {
        1 => "Easy",
        2 => "Medium",
        3 => "Hard",
        _ => "Unknown"
    };

    private async Task<int> GetCurrentUserIdAsync()
    {
        try
        {
            var userIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userId");
            return int.TryParse(userIdStr, out var id) ? id : 1;
        }
        catch { return 1; }
    }

    private async Task<string> GetCurrentUsernameAsync()
    {
        try
        {
            var username = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "username");
            return !string.IsNullOrEmpty(username) ? username : "Guest";
        }
        catch { return "Guest"; }
    }

