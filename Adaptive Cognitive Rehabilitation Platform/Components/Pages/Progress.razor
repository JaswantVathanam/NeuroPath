@page "/progress"
@using System.Net.Http.Json
@using System.Text.Json
@using System.Text.Json.Serialization
@using NeuroPath.Models
@using AdaptiveCognitiveRehabilitationPlatform.Services
@using AdaptiveCognitiveRehabilitationPlatform.Models
@using Microsoft.AspNetCore.Components
@using Microsoft.JSInterop
@inject IHttpClientFactory HttpClientFactory
@inject IJsonActivityStatsService ActivityStatsService
@inject ILogger<Progress> Logger
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Your Progress - NeuroPath</PageTitle>

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading your progress...</p>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="error-container">
        <i class="bi bi-exclamation-triangle"></i>
        <p>@errorMessage</p>
        <button class="btn-retry" @onclick="LoadProgressData">Try Again</button>
    </div>
}
else
{
<div class="progress-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-gradient"></div>
        <div class="hero-content">
            <h1 class="hero-title">
                <i class="bi bi-graph-up"></i> Your Progress
            </h1>
            <p class="hero-subtitle">Track your cognitive improvement journey and celebrate your achievements</p>
            <div class="hero-stats">
                <div class="hero-stat">
                    <span class="stat-number">@(progressData?.TotalGamesPlayed ?? 0)</span>
                    <span class="stat-label">Games Completed</span>
                </div>
                <div class="hero-stat">
                    <span class="stat-number">@(progressData?.CurrentStreak ?? 0)</span>
                    <span class="stat-label">Day Streak</span>
                </div>
                <div class="hero-stat">
                    <span class="stat-number">@(progressData?.AverageAccuracy.ToString("0") ?? "0")%</span>
                    <span class="stat-label">Average Score</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Overall Statistics Grid -->
    <section class="stats-section">
        <h2 class="section-title"><i class="bi bi-bar-chart-fill"></i> Overall Statistics</h2>
        <div class="stats-grid">
            <div class="stat-card" style="--delay: 0s;">
                <div class="stat-icon primary">
                    <i class="bi bi-controller"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(progressData?.TotalGamesPlayed ?? 0)</div>
                    <div class="stat-name">Total Games Played</div>
                </div>
            </div>
            <div class="stat-card" style="--delay: 0.1s;">
                <div class="stat-icon success">
                    <i class="bi bi-fire"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(progressData?.CurrentStreak ?? 0)</div>
                    <div class="stat-name">Current Streak</div>
                </div>
            </div>
            <div class="stat-card" style="--delay: 0.2s;">
                <div class="stat-icon info">
                    <i class="bi bi-percent"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(progressData?.AverageAccuracy.ToString("0") ?? "0")%</div>
                    <div class="stat-name">Average Accuracy</div>
                </div>
            </div>
            <div class="stat-card" style="--delay: 0.3s;">
                <div class="stat-icon warning">
                    <i class="bi bi-diagram-3"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(progressData?.CurrentLevel ?? 1)</div>
                    <div class="stat-name">Current Level</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Game-wise Progress -->
    <section class="games-section">
        <h2 class="section-title"><i class="bi bi-joystick"></i> Progress by Game</h2>
        <div class="games-grid">
            @if (progressData?.GameProgress != null && progressData.GameProgress.Any())
            {
                @foreach (var game in progressData.GameProgress)
                {
                    <div class="game-card" style="--delay: 0s;">
                        <div class="game-header @GetGameHeaderClass(game.GameType)">
                            <div class="game-icon">
                                <i class="bi @GetGameIcon(game.GameType)"></i>
                            </div>
                            <h3>@game.GameName</h3>
                        </div>
                        <div class="game-body">
                            <div class="game-stat">
                                <span class="label"><i class="bi bi-controller"></i> Games Played</span>
                                <span class="value">@game.GamesPlayed</span>
                            </div>
                            <div class="game-stat">
                                <span class="label"><i class="bi bi-star-fill"></i> Best Score</span>
                                <span class="value">@game.BestScore</span>
                            </div>
                            <div class="game-stat">
                                <span class="label"><i class="bi bi-bar-chart"></i> Average</span>
                                <span class="value">@game.AverageScore.ToString("0")</span>
                            </div>
                            <div class="progress-container-inner">
                                <div class="progress-label">Skill Progress</div>
                                <div class="progress-bar-container">
                                    <div class="progress-bar-fill" style="width: @(game.SkillProgress)%; --color: @game.Color;"></div>
                                </div>
                                <div class="progress-percentage">@game.SkillProgress.ToString("0")%</div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-data-card">
                    <i class="bi bi-controller"></i>
                    <p>No game data yet. Start playing to see your progress!</p>
                </div>
            }
        </div>
    </section>

    <!-- Activities Progress Section -->
    <section class="activities-section">
        <h2 class="section-title"><i class="bi bi-heart-pulse"></i> Wellness Activities Progress</h2>
        <div class="activities-grid">
            @if (activityProgress != null && activityProgress.Any())
            {
                @foreach (var activity in activityProgress)
                {
                    <div class="activity-progress-card" style="--delay: 0s; --color: @activity.Color;">
                        <div class="activity-progress-header" style="background: linear-gradient(135deg, @activity.Color, @AdjustColor(activity.Color, -20));">
                            <div class="activity-icon">
                                <i class="bi @activity.Icon"></i>
                            </div>
                            <h3>@activity.ActivityName</h3>
                        </div>
                        <div class="activity-progress-body">
                            <div class="activity-stat">
                                <span class="label"><i class="bi bi-calendar-check"></i> Sessions</span>
                                <span class="value">@activity.TotalSessions</span>
                            </div>
                            <div class="activity-stat">
                                <span class="label"><i class="bi bi-clock"></i> Time Spent</span>
                                <span class="value">@activity.TotalTimeMinutes min</span>
                            </div>
                            <div class="activity-stat">
                                <span class="label"><i class="bi bi-star-fill"></i> Avg Score</span>
                                <span class="value">@activity.AverageScore.ToString("0")</span>
                            </div>
                            @if (activity.LastSession.HasValue)
                            {
                                <div class="activity-stat">
                                    <span class="label"><i class="bi bi-calendar-event"></i> Last Session</span>
                                    <span class="value small">@FormatDate(activity.LastSession.Value)</span>
                                </div>
                            }
                            <div class="progress-container-inner">
                                <div class="progress-label">Completion Rate</div>
                                <div class="progress-bar-container">
                                    <div class="progress-bar-fill" style="width: @activity.CompletionRate%; --color: @activity.Color;"></div>
                                </div>
                                <div class="progress-percentage">@activity.CompletionRate%</div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-data-card">
                    <i class="bi bi-heart-pulse"></i>
                    <p>No wellness activity data yet. Try activities like journaling, breathing exercises, or mental math!</p>
                </div>
            }
        </div>
    </section>

    <!-- Activity Log -->
    <section class="activity-section">
        <h2 class="section-title"><i class="bi bi-clock-history"></i> Recent Activity</h2>
        <div class="activity-list">
            @if (progressData?.RecentActivity != null && progressData.RecentActivity.Any())
            {
                @foreach (var activity in progressData.RecentActivity)
                {
                    <div class="activity-card">
                        <div class="activity-marker @GetGameHeaderClass(activity.GameType)"></div>
                        <div class="activity-content">
                            <div class="activity-title">
                                <i class="bi @GetGameIcon(activity.GameType)"></i> @activity.GameName - @activity.DifficultyName
                                <span class="activity-badge">@activity.Score pts</span>
                            </div>
                            <div class="activity-meta">
                                <i class="bi bi-calendar-event"></i> @FormatDate(activity.PlayedAt)
                                <i class="bi bi-clock"></i> @FormatTime(activity.TimeTaken)
                                @if (activity.Moves > 0)
                                {
                                    <i class="bi bi-shuffle"></i> @activity.Moves @(activity.Moves == 1 ? "move" : "moves")
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-data-card">
                    <i class="bi bi-clock-history"></i>
                    <p>No recent activity. Play some games to see your history!</p>
                </div>
            }
        </div>
    </section>

    <!-- Tips for Improvement -->
    <section class="recommendations-section">
        <h2 class="section-title"><i class="bi bi-lightbulb-fill"></i> Personalized Recommendations</h2>
        <div class="recommendations-grid">
            @if (progressData?.Recommendations != null && progressData.Recommendations.Any())
            {
                var delay = 0.0;
                @foreach (var rec in progressData.Recommendations)
                {
                    <div class="recommendation-card" style="--delay: @(delay)s;">
                        <div class="recommendation-icon @rec.Type">
                            <i class="bi @rec.Icon"></i>
                        </div>
                        <div class="recommendation-body">
                            <h4>@rec.Title</h4>
                            <p>@rec.Message</p>
                        </div>
                    </div>
                    delay += 0.1;
                }
            }
            else
            {
                <div class="recommendation-card" style="--delay: 0s;">
                    <div class="recommendation-icon check">
                        <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <div class="recommendation-body">
                        <h4>Get Started!</h4>
                        <p>Play your first game to receive personalized recommendations for improvement.</p>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
}

<style>
    :root {
        --primary-color: #6366f1;
        --cyan: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --spacing-xs: 0.25rem;
        --spacing-sm: 0.5rem;
        --spacing-md: 1rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 2rem;
        --spacing-2xl: 3rem;
        --border-radius-sm: 0.375rem;
        --border-radius-md: 0.5rem;
        --border-radius-lg: 1rem;
        --border-color: #e5e7eb;
    }

    /* Loading & Error States */
    .loading-container, .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        gap: 1rem;
        color: #6366f1;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e5e7eb;
        border-top-color: #6366f1;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .error-container {
        color: #ef4444;
    }

    .error-container i {
        font-size: 3rem;
    }

    .btn-retry {
        background: #6366f1;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        cursor: pointer;
        font-weight: 500;
        transition: background 0.2s;
    }

    .btn-retry:hover {
        background: #4f46e5;
    }

    .no-data-card {
        grid-column: 1 / -1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(139, 92, 246, 0.05));
        border: 2px dashed rgba(99, 102, 241, 0.3);
        border-radius: var(--border-radius-lg);
        color: #6b7280;
        gap: 0.75rem;
    }

    .no-data-card i {
        font-size: 2.5rem;
        color: #6366f1;
        opacity: 0.5;
    }

    .progress-container {
        animation: fadeIn 0.6s ease-out;
        max-width: 1400px;
        margin: 0 auto;
        padding: var(--spacing-lg);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        margin-bottom: var(--spacing-2xl);
        color: white;
    }

    .hero-gradient {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #06b6d4 100%);
        opacity: 0.95;
        animation: gradientShift 8s ease infinite;
    }

    @@keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: var(--spacing-2xl);
        backdrop-filter: blur(10px);
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: var(--spacing-md);
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
    }

    .hero-title i {
        font-size: 2.25rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        opacity: 0.95;
        margin-bottom: var(--spacing-xl);
    }

    .hero-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: var(--spacing-md);
        margin-top: var(--spacing-lg);
    }

    .hero-stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: rgba(255, 255, 255, 0.1);
        padding: var(--spacing-md);
        border-radius: var(--border-radius-md);
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .hero-stat:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-5px);
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: var(--spacing-xs);
        opacity: 0.9;
    }

    /* Stats Section */
    .stats-section {
        margin-bottom: var(--spacing-2xl);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: var(--spacing-lg);
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        color: #1f2937;
    }

    .section-title i {
        font-size: 1.75rem;
        color: var(--primary-color);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--spacing-lg);
    }

    .stat-card {
        display: flex;
        align-items: center;
        gap: var(--spacing-lg);
        background: white;
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-lg);
        border: 2px solid #f3f4f6;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideUp 0.6s ease-out backwards;
        animation-delay: var(--delay, 0s);
        cursor: pointer;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        border-color: var(--primary-color);
        box-shadow: 0 20px 40px rgba(99, 102, 241, 0.1);
    }

    .stat-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        border-radius: var(--border-radius-lg);
        font-size: 1.5rem;
        color: white;
        flex-shrink: 0;
    }

    .stat-icon.primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
    }

    .stat-icon.success {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .stat-icon.info {
        background: linear-gradient(135deg, #06b6d4, #0891b2);
    }

    .stat-icon.warning {
        background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1f2937;
        line-height: 1;
    }

    .stat-name {
        font-size: 0.875rem;
        color: #6b7280;
        margin-top: var(--spacing-xs);
        font-weight: 500;
    }

    /* Games Section */
    .games-section {
        margin-bottom: var(--spacing-2xl);
    }

    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--spacing-lg);
    }

    .game-card {
        background: white;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        border: 1px solid #f3f4f6;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideUp 0.6s ease-out backwards;
        animation-delay: var(--delay, 0s);
        display: flex;
        flex-direction: column;
    }

    .game-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
        border-color: transparent;
    }

    .game-header {
        padding: var(--spacing-lg);
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .game-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.1;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="15" fill="%23fff"/><circle cx="80" cy="80" r="15" fill="%23fff"/></svg>');
        animation: moveBackground 20s linear infinite;
    }

    @@keyframes moveBackground {
        0% { transform: translateX(0); }
        100% { transform: translateX(100px); }
    }

    .game-header.memory-match {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
    }

    .game-header.reaction-trainer {
        background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .game-header.sorting-task {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .game-header.trail-making {
        background: linear-gradient(135deg, #0ea5e9, #0284c7);
    }

    .game-header.dual-task {
        background: linear-gradient(135deg, #ec4899, #be185d);
    }

    .game-header.stroop-test {
        background: linear-gradient(135deg, #a855f7, #7c3aed);
    }

    .game-icon {
        font-size: 1.75rem;
        position: relative;
        z-index: 1;
    }

    .game-header h3 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 700;
        position: relative;
        z-index: 1;
    }

    .game-body {
        padding: var(--spacing-lg);
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
    }

    .game-stat {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-md);
        background: #f9fafb;
        border-radius: var(--border-radius-md);
        transition: all 0.3s ease;
    }

    .game-stat:hover {
        background: #f3f4f6;
        transform: translateX(4px);
    }

    .game-stat .label {
        font-size: 0.875rem;
        color: #6b7280;
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .game-stat .value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
    }

    .progress-container-inner {
        margin-top: var(--spacing-md);
        padding: var(--spacing-md);
        background: #f9fafb;
        border-radius: var(--border-radius-md);
    }

    .progress-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: var(--spacing-sm);
    }

    .progress-bar-container {
        height: 8px;
        background: #e5e7eb;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        margin-bottom: var(--spacing-sm);
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--color), color-mix(in srgb, var(--color) 80%, white));
        border-radius: 10px;
        transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .progress-bar-fill::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: shimmer 2s infinite;
    }

    @@keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .progress-percentage {
        font-size: 0.75rem;
        font-weight: 700;
        color: #6366f1;
        text-align: right;
    }

    /* Activities Section - Wellness Activities */
    .activities-section {
        margin-bottom: var(--spacing-2xl);
    }

    .activities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-lg);
    }

    .activity-progress-card {
        background: white;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        border: 1px solid #f3f4f6;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideUp 0.6s ease-out backwards;
        animation-delay: var(--delay, 0s);
        display: flex;
        flex-direction: column;
    }

    .activity-progress-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
        border-color: transparent;
    }

    .activity-progress-header {
        padding: var(--spacing-lg);
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .activity-progress-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
